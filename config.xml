<?xml version='1.0' encoding='utf-8'?>
<widget id="si.bonar.cordova" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bonar</name>
    <description>
        Bonar: ponudniki študentske prehrane na zemljevidu
    </description>
    <author email="dev@cordova.apache.org" href="http://bonar.si">
        Rok Rupnik in Ožbolt Menegatti
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="phonegap-version"             value="cli-6.1.1" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <plugin name="cordova-plugin-splashscreen"          spec="2.1.0" />
    <preference name="SplashScreenDelay"            value="10000" />
    <preference name="SplashScreen"                 value="screen" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/img/icon.png" density="ldpi" />
        <icon src="www/img/icon.png" density="mdpi" />
        <icon src="www/img/icon.png" density="hdpi" />
        <icon src="www/img/icon.png" density="xhdpi" />
        
        <splash src="www/img/icon.png" density="land-hdpi"/>
        <splash src="www/img/icon.png" density="land-ldpi"/>
        <splash src="www/img/icon.png" density="land-mdpi"/>
        <splash src="www/img/icon.png" density="land-xhdpi"/>
        <splash src="www/img/icon.png" density="port-hdpi"/>
        <splash src="www/img/icon.png" density="port-ldpi"/>
        <splash src="www/img/icon.png" density="port-mdpi"/>
        <splash src="www/img/icon.png" density="port-xhdpi"/>
        
    </platform>
    <engine name="android" spec="^4.1" />
</widget>
